{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom", "es2015"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./typings"]
  },
  "include": ["client/**/*", "server/**/*"],
  "exclude": ["node_modules", ".meteor"]
}
